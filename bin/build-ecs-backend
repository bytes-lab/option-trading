#!/usr/bin/env bash

export BUILD_SCRIPT_NAME
export BUILD_SCRIPT_DIR
export CONTAINER_APP_DIR
export DOCKER_FILE_PATH
export IMAGE_NAME

BUILD_SCRIPT_NAME="$(basename "$0")"
BUILD_SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
CONTAINER_APP_DIR="$(cd "$BUILD_SCRIPT_DIR"/../django_apps && pwd)"
DOCKER_FILE_PATH="$CONTAINER_APP_DIR"/Dockerfile.prod.ecs
IMAGE_NAME='options-ecs-backend'

"$BUILD_SCRIPT_DIR"/build-ecs-common "$@"
